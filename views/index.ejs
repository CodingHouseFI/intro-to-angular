<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Document</title>

  <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css">
  <link rel="stylesheet" href="style.css">

  <script src="/bower_components/angular/angular.js"></script>
  <script src="main.js"></script>
</head>
<body ng-app='myApp' ng-controller='mainCtrl'>

  <div class="container">
    
    <h1 class="text-center">Contact List</h1>

    <input type="number" ng-model='money'>

    <p>Money: {{money}}</p>
    <p>Money: {{money | currency : 'â‚¬' : 4}}</p>


    <form ng-submit='addContact(newContact)'>

      <div class="form-group">
        <label>Name:</label>
        <input type="text" class="form-control" placeholder="Name" ng-model='newContact.name' required>
      </div>
      <div class="form-group">
        <label>Email:</label>
        <input type="email" class="form-control" placeholder="Email" ng-model='newContact.email' required>
      </div>
      <div class="form-group">
        <label>Phone:</label>
        <input type="text" class="form-control" placeholder="Phone" ng-model='newContact.phone' required>
      </div>

      <button class="btn btn-default">Submit</button>
    </form>

    <pre>{{newContact | json}}</pre>


    <ng-pluralize count="contacts.length"
              when="{'0': 'You have no contacts.',
                     '1': 'You have 1 contact.',
                     'other': 'You have {{contacts.length}} contacts.'}">
    </ng-pluralize>

    <table class="table" ng-show='contacts.length'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Delete?</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat='contact in contacts track by $index'>
          <td>{{contact.name | uppercase}}</td>
          <td>{{contact.email}}</td>
          <td>{{contact.phone}}</td>
          <td>
            <button class="btn btn-danger" ng-click='removeContact($index)'>X</button>
          </td>
        </tr>        
      </tbody>
    </table>
  </div>



</body>
</html>
